##
##  Angular application routes
##
@application.config [ 
	'$routeProvider'
	'$locationProvider'
	($routeProvider, $locationProvider) ->

		$routeProvider
			##
			##  index page
			##
			.when '/',
				templateUrl: 'home/index.html'
				controller: 'ApplicationController'

			##################
			##  Users AUTH  ##
			##################

			##
			##  login page
			##
			.when '/login',
				templateUrl: 'user/login.html'
				controller: 'AuthController'

			##
			##  sign_up page
			##
			.when '/sign-up',
				templateUrl: 'user/sign_up.html'
				controller: 'AuthController'

			##
			##  profile page
			##
			.when '/profile',
				templateUrl: 'user/profile.html'
				controller: 'AuthController'

			################
			##  Projects  ##
			################

			#############
			##  Tasks  ##
			#############

			##
			##  GET projects/:project_id/tasks/:id
			##
			.when '/projects/:project_id/tasks/:id',
				templateUrl: 'tasks/show.html'
				controller: 'TasksController'

			####################
			##  Other routes  ##
			####################

			##
			##  404 page
			##
			.otherwise
				templateUrl: '404.html'

		##
		##  remove anchor
		##
		$locationProvider.html5Mode true 
]